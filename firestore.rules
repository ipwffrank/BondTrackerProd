rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Allow anyone authenticated to create their user document during signup
    match /users/{userId} {
      allow create: if request.auth.uid == userId;
      allow read: if request.auth.uid == userId;
      allow update: if request.auth.uid == userId;
    }
    
    // Allow creating organizations during signup
    match /organizations/{orgId} {
      allow create: if isAuthenticated();
      allow read: if isAuthenticated();
      allow update: if false;
    }
    
    match /organizations/{orgId}/clients/{clientId} {
      allow read, write: if isAuthenticated();
    }
    
    match /organizations/{orgId}/activities/{activityId} {
      allow read, write: if isAuthenticated();
    }
    
    match /organizations/{orgId}/pipeline/{issueId} {
      allow read, write: if isAuthenticated();
    }
    
    match /organizations/{orgId}/analytics/{document=**} {
      allow read: if isAuthenticated();
      allow write: if false;
    }
  }
}
